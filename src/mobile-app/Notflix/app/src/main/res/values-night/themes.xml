<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Notflix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary and Secondary (unchanged) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>

        <!-- Dark Background, Surface, and Error -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorError">@color/error</item>

        <!-- On-colors for dark mode -->
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorOnError">@color/onError</item>

        <!-- Optional: status bar -->
        <item name="android:statusBarColor">@color/background</item>
    </style>
</resources>
